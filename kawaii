        <img src="https://media.tenor.com/f04Tj9yK-C0AAAAC/kazuma-thumbs-up.gif" alt="Kazuma Thumbs Up" class="kazuma-img">
        <h1>G√©nial ! üéâ</h1>
        <p>Pr√©pare-toi pour le meilleur rendez-vous de ta vie (sans crapauds g√©ants, promis).</p>
    </div>

    <script>
        const btnNo = document.getElementById('btn-no');
        const btnYes = document.getElementById('btn-yes');
        const mainCard = document.getElementById('main-card');
        const successContainer = document.getElementById('success-container');

        // Fonction pour d√©placer le bouton (compatible mobile et desktop)
function moveButton(e) {
            // Emp√™che le clic par d√©faut sur mobile si on touche le bouton
            if(e.type === 'touchstart') e.preventDefault();

            const x = Math.random() * (window.innerWidth - btnNo.offsetWidth - 50);
            const y = Math.random() * (window.innerHeight - btnNo.offsetHeight - 50);
            
            btnNo.style.position = 'fixed';
            btnNo.style.left = ${x}px;
            btnNo.style.top = ${y}px;
        }

        // √âv√©nement Souris (PC)
        btnNo.addEventListener('mouseover', moveButton);
        
        // √âv√©nement Toucher (Mobile/Tablette) - C'est la partie ajout√©e !
        btnNo.addEventListener('touchstart', moveButton);

        // Au cas o√π quelqu'un arrive √† cliquer quand m√™me
        btnNo.addEventListener('click', (e) => {
            e.preventDefault();
            moveButton(e);
        });

        // Function for when she clicks "Yes"
        btnYes.addEventListener('click', () => {
            mainCard.style.display = 'none';
            successContainer.style.display = 'block';
            createHearts();
        });

        // Add some falling hearts animation for the background
        function createHearts() {
            const container = document.getElementById('hearts-container');
            for(let i=0; i<30; i++) {
                setTimeout(() => {
                    const heart = document.createElement('div');
                    heart.innerHTML = '‚ù§Ô∏è';
                    heart.style.position = 'absolute';
                    heart.style.left = Math.random() * 100 + 'vw';
                    heart.style.top = '-20px';
                    heart.style.fontSize = (Math.random() * 20 + 10) + 'px';
                    heart.style.transition = 'top 3s linear, opacity 3s linear';
                    heart.style.opacity = '1';
                    
                    container.appendChild(heart);

                    // Animate
                    setTimeout(() => {
                        heart.style.top = '100vh';
                        heart.style.opacity = '0';
                    }, 50);

                    // Clean up
                    setTimeout(() => {
                        heart.remove();
                    }, 3000);
                }, i * 100);
            }
        }
    </script>
